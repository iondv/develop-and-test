# EditorConfig is awesome: http://EditorConfig.org  http://habrahabr.ru/post/220131/

#   EditorConfig
root = true

#     unix-  ,    
[*]
end_of_line = lf
insert_final_newline = false
#      utf-8
charset = utf-8

#  JavaScript     2 ,     
#[*.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

#  JSON     2 
#[*.js]
indent_style = space
indent_size = 2

#        .
[*.md]
trim_trailing_whitespace = false

#    package.json or .travis.yml    2 
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

#    JS  CSS .
[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore

#  
# Matches multiple files with brace expansion notation
# Set default charset
#[*.{js,py}]
#charset = utf-8

# Tab indentation (no size specified)
#[Makefile]
#indent_style = tab

# Indentation override for all JS under lib directory
#[lib/**.js]
#indent_style = space
#indent_size = 2
